{
  "name": "openapi-mcp",
  "version": "1.0.0",
  "description": "MCP server for inspecting and reasoning about OpenAPI specifications",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "openapi-mcp": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "openapi",
    "swagger",
    "api",
    "llm",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "openapi-types": "^12.1.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  }
}