{
  "name": "@blackkspydo/openapi-mcp",
  "version": "0.1.2",
  "description": "MCP server for inspecting and reasoning about OpenAPI specifications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "openapi-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackkspydo/openapi-mcp.git"
  },
  "homepage": "https://github.com/blackkspydo/openapi-mcp#readme",
  "bugs": {
    "url": "https://github.com/blackkspydo/openapi-mcp/issues"
  },
  "keywords": [
    "mcp",
    "openapi",
    "swagger",
    "api",
    "llm",
    "claude",
    "model-context-protocol"
  ],
  "author": "blackkspydo",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "openapi-types": "^12.1.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  }
}
